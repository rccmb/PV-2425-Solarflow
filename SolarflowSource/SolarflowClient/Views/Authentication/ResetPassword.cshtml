@model SolarflowClient.Models.ViewModels.Authentication.ResetPasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Reset Password";
}

<link href="~/css/site.css" rel="stylesheet" type="text/css" asp-append-version="true" />
<link href="~/css/background.css" rel="stylesheet" type="text/css" asp-append-version="true" />
<link href="~/css/authentication/authentication-global.css" rel="stylesheet" type="text/css" asp-append-version="true" />
<link href="~/css/authentication/authentication-login.css" rel="stylesheet" type="text/css" asp-append-version="true" />
<link href="~/css/global/alert.css" rel="stylesheet" type="text/css" asp-append-version="true" />

<body class="authentication-body">
    

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div style="margin-top: 30px">
        <img class="authentication-solarflow-logo" src="~/images/logo_cropped.png" alt="image">
        <h1 class="authentication-solarflow-title">SOLARFLOW</h1>
        <h2 class="authentication-solarflow-slogan">Energy Management Dashboard</h2>
    </div>

    <h1 class="authentication-form-title">Reset Your Password</h1>

    <form class="authentication-form" asp-action="SubmitResetPassword" method="post">
        <input type="hidden" asp-for="Token" />

        <div class="authentication-input-div">
            <label class="authentication-form-label" asp-for="Email"></label>
            <input asp-for="Email" class="authentication-form-text-input" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="authentication-input-div">
            <label class="authentication-form-label" asp-for="NewPassword"></label>
            <input asp-for="NewPassword" class="authentication-form-text-input" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="authentication-input-div">
            <label class="authentication-form-label" asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="authentication-form-text-input" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="authentication-form-button background-blue">Reset Password</button>
    </form>

</body>