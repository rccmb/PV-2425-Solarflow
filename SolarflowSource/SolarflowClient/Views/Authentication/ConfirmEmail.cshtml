@{
    Layout = null;
    ViewData["Title"] = "Solarflow - Email Confirmation";
}

<link href="~/css/site.css" rel="stylesheet" type="text/css" asp-append-version="true" />
<link href="~/css/background.css" rel="stylesheet" type="text/css" asp-append-version="true" />
<link href="~/css/authentication/authentication-global.css" rel="stylesheet" type="text/css" asp-append-version="true" />
<link href="~/css/authentication/authentication-login.css" rel="stylesheet" type="text/css" asp-append-version="true" />
<link href="~/css/global/alert.css" rel="stylesheet" type="text/css" asp-append-version="true" />

@model SolarflowClient.Models.ViewModels.Authentication.ConfirmEmailViewModel

<body class="authentication-body">

    <form id="confirmForm" class="authentication-form" asp-action="SubmitConfirmEmail" method="post">
        <div class="authentication-input-div">
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="UserId" />
        </div>
        <button type="submit" class="authentication-form-button background-blue" style="display: none;">Confirm Email</button>
    </form>

    <script>
        window.addEventListener('DOMContentLoaded', function () {
            document.getElementById('confirmForm').submit();
        });
    </script>


</body>