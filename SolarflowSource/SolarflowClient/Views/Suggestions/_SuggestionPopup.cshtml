@model List<SolarflowClient.Models.ViewModels.Suggestions.GetSuggestionsViewModel>

<div id="suggestionPopup" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Pending Suggestions</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (Model.Any())
                {
                    @foreach (var suggestion in Model)
                    {
                        <div class="suggestion-card">
                            <h5>@suggestion.Title</h5>
                            <p>@suggestion.Description</p>
                            <form method="post" asp-action="AcceptSuggestion" asp-route-suggestionId="@suggestion.Id">
                                <button type="submit" class="btn btn-success">Accept</button>
                            </form>
                            <form method="post" asp-action="IgnoreSuggestion" asp-route-suggestionId="@suggestion.Id">
                                <button type="submit" class="btn btn-danger">Ignore</button>
                            </form>
                        </div>
                    }
                }
                else
                {
                    <p>No pending suggestions.</p>
                }
            </div>
        </div>
    </div>
</div>