@model SolarflowClient.Models.ViewModels.Settings.SettingsModelView
@{
    ViewData["Title"] = "Settings Page";
}

<link href="~/css/settings/settings.css" rel="stylesheet" asp-append-version="true"/>

<script>
    function togglePassword() {
        const input = document.getElementById('passwordInput1');
        input.type = input.type === 'password' ? 'text' : 'password';
    }
</script>

<div class="inbox-container">
    <h2 class="page-title">👤 User Information</h2>

    <div class="notification-card">
        <div class="notification-content">
            <div class="notification-icon">
                <img src="~/images/icons/profile.png" alt="Avatar" width="60" height="60" style="border-radius: 50%;">
            </div>
            <div class="notification-text">
                <form method="post" action="/Settings/UpdateUser">
                    <div class="settings-input-group">
                        <label>Email:</label>
                        <input type="text" value="@Model.Email" readonly class="readonly-input"/>
                        <input type="hidden" name="Email" value="@Model.Email"/>
                    </div>

                    <div class="settings-input-group">
                        <label>Created At:</label>
                        <input type="text" value="@Model.CreatedAt" readonly class="readonly-input"/>
                        <input type="hidden" name="CreatedAt" value="@Model.CreatedAt"/>
                    </div>

                    <div class="settings-input-group">
                        <label>Full Name:</label>
                        <input type="text" name="Fullname" value="@Model.Fullname" required />
                    </div>

                    <div class="settings-input-group">
                        <label>GridKWh:</label>

                        <input type="number" step="0.001" name="GridKWh" value="@Model.GridKWh" required/>
                    </div>
                    <div class="settings-input-group">
                        <label>SolarKWh:</label>
                        <input type="number" step="0.001" name="SolarKWh" value="@Model.SolarKWh" required />
                    </div>
                    <div class="settings-input-group">
                        <label>Latitude:</label>
                        <input type="number" step="0.001" name="Latitude" value="@Model.Latitude" required />
                    </div>
                    <div class="settings-input-group">
                        <label>Longitude:</label>
                        <input type="number" step="0.001" name="Longitude" value="@Model.Longitude" required />

                    </div>
                    <div class="settings-buttons">
                        <button type="reset" class="btn btn-danger">❌ Cancel</button>
                        <button type="submit" class="btn btn-success">💾 Save</button>
                    </div>
                </form>

                <a class="forgot-password-link" asp-controller="Authentication" asp-action="AccountRecovery">Forgot Password?</a>
            </div>
        </div>
    </div>

    <div class="notification-card">
        <div class="notification-content">
            <div class="notification-icon">🔐</div>
            <div class="notification-text">
                <h4 class="notification-title">View Account</h4>
                @if (Model.HasViewAccount)
                {
                    <p class="notification-description">You have an active View Account. You can delete it here.</p>
                    <form asp-controller="Settings" asp-action="DeleteUserViewAccount" method="post">
                        <div class="settings-buttons">
                            <button type="submit" class="btn btn-danger">🗑️ Delete View Account</button>
                        </div>
                    </form>
                }
                else
                {
                    <p class="notification-description">You don’t have a View Account. Create one below:</p>
                    <form asp-controller="Home" asp-action="RegisterViewAccount" method="post">
                        <div class="settings-input-group">
                            <label>View Account Password:</label>
                            <div class="password-input-wrapper">
                                <input id="passwordInput1" type="password" name="Password" required/>
                                <button type="button" class="toggle-password-btn" onclick="togglePassword()">👁️</button>
                            </div>
                        </div>
                        <div class="settings-buttons">
                            <button type="submit" class="btn btn-success">➕ Create View Account</button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>